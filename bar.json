{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": { "text": "Proportion of chronic conditions in persons 15 and above (%)- 2017-2018", "fontSize":10},
  "width": 90,
  "height": 110,
  "params": [
    {
      "name": "Population_Above",
      "value": 0,
      "bind": {
      "input": "range",
      "min": 0,
      "max": 20,
      "step": 0.1,
      "name": "Range of proportion: "
    }
    },

    {
    "name": "condition_selection",
    "bind": {
    "input": "select",
    "options": [
    null,
    "Arthritis",
    "Asthma",
    "Back problems",
    "Cancer",
    "Chronic pulmonary disease",
    "Diabetes mellitus",
    "Hayfever and allergic rhinitis",
    "Heart stroke and vascular disease",
    "Hypertension",
    "Kidney disease",
    "Mental and behavioural conditions",
    "Osteoporosis"
    ],
    "labels":[
    "Show All",
    "Arthritis",
    "Asthma",
    "Back problems",
    "Cancer",
    "Chronic pulmonary disease",
    "Diabetes mellitus",
    "Hayfever and allergic rhinitis",
    "Heart stroke and vascular disease",
    "Hypertension",
    "Kidney disease",
    "Mental and behavioural conditions",
    "Osteoporosis"
    ],
    "name": "condition Selection: "
    }
    }
    ],
    "transform": [
       {"filter": "datum.Australia > 0"},
       {"filter": "datum.Australia > 0"},
       {"filter": "datum.Australia > Population_Above"},
       {"filter": "condition_selection == null || datum.longterm_conditions == condition_selection"},
       {
        "calculate": "'Around ' + datum['Australia'] +' percent of Australians suffer from Diabetes mellitus'",
        "as": "text_annotation"
        }
       ],
  "padding": 20,
"data": {
  "url": "https://raw.githubusercontent.com/RogueTrader7/vis2/main/bar.csv"
  },

  "encoding": {
  "x": { "field": "Australia", "type": "quantitative" },
  "y": { "field": "longterm_conditions", "type": "nominal" },
  "tooltip":[{"field": "longterm_conditions", "type": "nominal"},
            {"field": "Australia", "type": "quantitative"}]
  },
  "layer": [
      {
          "mark":{
          "type":"bar"}
  },
    {"transform": [
      {
      "window": [{
        "op": "rank",
        "as": "rank"
      }],
      "sort": [{ "field": "Australia", "order": "descending" }]
    }, {
      "filter": "datum.rank <= 1"
    }
  ],
   "encoding": {
    "x": {
        "field": "Australia",
        "type": "quantitative"
    },
    "y": {
        "field": "longterm_conditions",
        "type": "nominal",
        "sort": {"field": "Australia", "op": "average", "order":"descending"}
    }
  
  },

    "mark": {"type": "text", "align": "left", "dx": 3},
  "encoding": {"text": {"field": "text_annotation"}
  }  
  }
 
  ]
} 
